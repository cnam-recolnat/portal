#-----------------------------------------------------------8<----------------------------------------------------------
# Base with SSH support
#-----------------------------------------------------------8<----------------------------------------------------------
FROM		tutum/debian-wheezy
MAINTAINER	Arie Benichou <arie.benichou@gmail.com>
#-----------------------------------------------------------8<----------------------------------------------------------
# System Tools
#-----------------------------------------------------------8<----------------------------------------------------------
RUN			apt-get update && apt-get dist-upgrade -y -q && \
			apt-get install -y -q \
				locate \
				nano \
		  		curl \
		  		wget \
		  		git \
				netcat \
				nmap \
		  		net-tools \
		  		lsof \
		  		rsync
#-----------------------------------------------------------8<----------------------------------------------------------
# Cleaning
#-----------------------------------------------------------8<----------------------------------------------------------
RUN			apt-get autoclean && apt-get autoremove
#-----------------------------------------------------------8<----------------------------------------------------------
# Indexing
#-----------------------------------------------------------8<----------------------------------------------------------
RUN			updatedb
#-----------------------------------------------------------8<----------------------------------------------------------
# Workspace
#-----------------------------------------------------------8<----------------------------------------------------------
ADD			./⁄/ /
#-----------------------------------------------------------8<----------------------------------------------------------
# Main
#-----------------------------------------------------------8<----------------------------------------------------------
EXPOSE 22
ENTRYPOINT  ["/root/main.sh"]
#-----------------------------------------------------------8<----------------------------------------------------------
